$Macro SRCDIR		"..\..\..\.."
$Macro GAMENAME 	"pysource"

$Macro OUTLIBDIR	"$SRCDIR\lib\public" [!$LINUX]

$include "$SRCDIR\vpc_scripts\source_lib_base.vpc"
$Include "$SRCDIR\vpc_scripts\pysource_base.vpc"

$Configuration
{
	$Compiler
	{
		// General
		$WarningLevel						"Level 3 (/W3)"
		$AdditionalIncludeDirectories	"$BASE;$SRCDIR\thirdparty\boost;$SRCDIR\thirdparty\python\PC;$SRCDIR\thirdparty\python\Include"
		$PreprocessorDefinitions		"$BASE;"
		
		// Code Generation
		$EnableC++Exceptions				"Yes (/EHsc)"
	}
}

