"VertexLitGeneric"
{
	"$baseTexture" "models\props_am\hev_suit"
	"$bumpmap" "models\props_am\hev_suit_normals"

	"$surfaceprop" "plastic"

	"$nodecal" "1"
//	"$halflambert" 1
	"$multipass" 0

        $detail detail\bm_metal_detail_01 // e.g. for brickwork, concrete...
        $detailscale 8
        $detailblendfactor 0.5
        $detailblendmode 0

	"$envmap" "env_cubemap"
	"$basealphaenvmapmask" "0"
//	"$normalmapalphaenvmapmask" 1

	"$envmaptint" "[.11 .11 .11]"
//	"$envmapcontrast" "1.0"

	"$phong" "1"
	"$phongexponent" "15"
	"$phongboost" "2.5"
//	"$phongboost" "0.008"
	"$phongfresnelranges"	"[0.4 0.9 2.6]"
	"$phongalbedotint" "1"

	// Rim lighting parameters

	"$rimlight" "1"
	"$rimlightexponent" "25"
	"$rimlightboost" "0.5"
}