"UnlitGeneric"
{
	"<dx90"
	{
		$outlinecolor "[0.9 0.9 0.8]"
	}
	
	"$translucent" 1
	"$baseTexture" "hud\gradient_blue"
	"$detail" "hud\leaderboard_area_team"
	$detailscale 1
	$detailblendmode 8
	$distancealphafromdetail 1

	// give it a slight outer soft edge
	$softedges 1
	$edgesoftnessstart 0.5
    $edgesoftnessend 0.4
	$scaleedgesoftnessbasedonscreenres 1

	// give it a white outline
	$outline 1
	$outlinecolor "[0.9 0.9 0.5]"
	$outlinestart0 0.45
	$outlinestart1 0.47
	$outlineend0 0.5
	$outlineend1 0.52
	$scaleoutlinesoftnessbasedonscreenres 1
	// and a drop shadow
	$glow 0
	$glowcolor "[0 0 0]"
	$glowalpha 0.5
	$glowstart 0
	$glowend 0.5
	$glowx 0
	$glowy 0


//	"$vertexcolor" 1
	$distancealpha 1
	"$no_fullbright" 1
	"$ignorez" 1
	"%keywords" "tf"
}

