"UnlitGeneric"
{
	"<dx90"
	{
		$outlinecolor "[0.9 0.9 0.8]"
	}

	"$translucent" 1
	"$vertexalpha" 1
	"$baseTexture" "hud\null_texture"
	"$detail" "hud\objectives_flagpanel_mask_bg"
	$detailscale 1
	$detailblendmode 8
	$distancealphafromdetail 1

	// give it a slight outer soft edge
	$softedges 1
	$edgesoftnessstart 0.5
    	$edgesoftnessend 0.4
	$scaleedgesoftnessbasedonscreenres 1

	// give it a white outline
	$outline 1
	$outlinecolor "[0.7 0.7 0.5]"
	$outlinestart0 0.4
	$outlinestart1 0.47
	$outlineend0 0.49
	$outlineend1 0.64
	$scaleoutlinesoftnessbasedonscreenres 1
	// and a drop shadow
	$glow 1
	$glowcolor "[0 0 0]"
	$glowalpha 0.45
	$glowstart 0.15
	$glowend 0.5
	$glowx -0.001
	$glowy -0.001


//	"$vertexcolor" 1
	$distancealpha 1
	"$no_fullbright" 1
	"$ignorez" 1
	"%keywords" "tf"
}

